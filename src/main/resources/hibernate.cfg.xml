<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.proxool.xml">
            proxool.cfg.xml
        </property>

        <property name="hibernate.proxool.pool_alias">
            archblock-pool
        </property>

        <property name="hibernate.hbm2ddl.auto">
            create
        </property>

        <!-- List of mapping classes -->
        <mapping class="com.archivesmc.archblock.storage.entities.Block"/>
        <mapping class="com.archivesmc.archblock.storage.entities.Friendship"/>
        <mapping class="com.archivesmc.archblock.storage.entities.Player"/>
    </session-factory>
</hibernate-configuration>
